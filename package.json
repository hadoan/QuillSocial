{
  "name": "quillsocial-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/features/*",
    "packages/app-store/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=@quillsocial/web...",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "db-seed": "turbo run db-seed",
    "db-studio": "yarn prisma studio",
    "dev": "turbo run dev --filter=@quillsocial/web",
    "env-check:common": "dotenv-checker --schema .env.example --env .env",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma": "yarn workspace @quillsocial/prisma prisma",
    "prisma:studio": "yarn workspace @quillsocial/prisma prisma studio",
    "start": "turbo run start --filter=@quillsocial/web",
    "type-check": "turbo run type-check",
    "type-check:ci": "turbo run type-check:ci --log-prefix=none",
    "app-store-cli": "yarn workspace @quillsocial/app-store-cli",
    "app-store:build": "yarn app-store-cli build",
    "app-store:watch": "yarn app-store-cli watch",
    "app-store": "yarn app-store-cli cli"
  },
  "devDependencies": {
    "@snaplet/copycat": "^0.3.0",
    "@types/dompurify": "^2.4.0",
    "@types/formidable": "^3.4.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "c8": "^7.13.0",
    "dotenv-checker": "^1.1.5",
    "husky": "^8.0.0",
    "jest-diff": "^29.5.0",
    "jsdom": "22.1.0",
    "prettier": "^2.8.6",
    "tsc-absolute": "1.0.1",
    "typescript": "^5.3.0",
    "vitest": "^0.31.1",
    "vitest-mock-extended": "^1.1.3"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.9",
    "@fullcalendar/daygrid": "^6.1.9",
    "@fullcalendar/interaction": "^6.1.9",
    "@fullcalendar/react": "^6.1.9",
    "@fullcalendar/timegrid": "^6.1.9",
    "@google-cloud/storage": "^7.1.0",
    "@types/formidable": "^3.4.3",
    "city-timezones": "^1.2.1",
    "classnames": "^2.3.2",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.6.0",
    "eslint": "^8.34.0",
    "formidable": "^3.5.1",
    "kbar": "^0.1.0-beta.45",
    "lucide-react": "^0.171.0",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primereact": "^10.1.1",
    "quill": "^1.3.7",
    "react-tooltip": "^5.21.5",
    "string-to-color": "^2.2.2",
    "styled-jsx": "^5.1.6",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=7.0.0",
    "yarn": "3.4.1"
  },
  "prisma": {
    "schema": "packages/prisma/schema.prisma",
    "seed": "ts-node --transpile-only ./packages/prisma/seed.ts"
  },
  "syncpack": {
    "filter": "^(?!@quillsocial).*",
    "semverRange": ""
  },
  "packageManager": "yarn@3.4.1",
  "resolutions": {
    "@apidevtools/json-schema-ref-parser": "9.0.9",
    "@types/node": "16.9.1",
    "@types/react": "18.0.26",
    "@types/react-dom": "^18.0.9"
  }
}
